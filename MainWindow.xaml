<Window x:Class="DVDPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="DVD Player - Dual Subtitles"
        Width="1024" Height="700"
        MinWidth="800" MinHeight="500"
        Background="{StaticResource WindowBackground}"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        KeyDown="Window_KeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />           <!-- ビデオ領域 -->
            <RowDefinition Height="Auto" />         <!-- コントロールバー -->
        </Grid.RowDefinitions>

        <!-- ========== ビデオ領域 ========== -->
        <Grid Grid.Row="0" Background="{StaticResource SurfaceBackground}"
              MouseMove="VideoArea_MouseMove">

            <!-- LibVLCSharp VideoView -->
            <vlc:VideoView x:Name="VideoView">
                <!-- VideoView 内に配置して airspace 問題を回避 -->
                <Grid x:Name="SubtitleOverlay" MouseRightButtonUp="SubtitleOverlay_MouseRightButtonUp">

                    <!-- A-B リピート表示インジケーター -->
                    <Border x:Name="AbRepeatIndicator"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            Margin="0,8,8,0"
                            Background="#AA000000"
                            CornerRadius="4"
                            Padding="8,4"
                            Visibility="Collapsed">
                        <TextBlock x:Name="TxtAbRepeat"
                                   Foreground="#FF89B4FA"
                                   FontFamily="{StaticResource UIFont}"
                                   FontSize="12"
                                   FontWeight="SemiBold" />
                    </Border>

                    <!-- 再生速度表示インジケーター -->
                    <Border x:Name="SpeedIndicator"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="8,8,0,0"
                            Background="#AA000000"
                            CornerRadius="4"
                            Padding="8,4"
                            Visibility="Collapsed">
                        <TextBlock x:Name="TxtSpeed"
                                   Foreground="#FFA6E3A1"
                                   FontFamily="{StaticResource UIFont}"
                                   FontSize="12"
                                   FontWeight="SemiBold" />
                    </Border>

                    <!-- 日本語字幕 (上部) -->
                    <TextBlock x:Name="JapaneseSubtitle"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Center"
                               Margin="20,40,20,0"
                               FontFamily="{StaticResource JapaneseFont}"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               MaxWidth="800">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black"
                                              BlurRadius="5"
                                              ShadowDepth="2"
                                              Opacity="0.9" />
                        </TextBlock.Effect>
                    </TextBlock>

                    <!-- 英語字幕 (下部) -->
                    <TextBlock x:Name="EnglishSubtitle"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center"
                               Margin="20,0,20,80"
                               FontFamily="{StaticResource EnglishFont}"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="White"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               MaxWidth="800">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black"
                                              BlurRadius="5"
                                              ShadowDepth="2"
                                              Opacity="0.9" />
                        </TextBlock.Effect>
                    </TextBlock>

                    <!-- 右クリック コンテキストメニュー -->
                    <Grid.ContextMenu>
                        <ContextMenu x:Name="VideoContextMenu"
                                     Background="#2A2A3E" Foreground="#CDD6F4"
                                     BorderBrush="#45475A" BorderThickness="1">
                            <!-- 再生コントロール -->
                            <MenuItem Header="再生/一時停止" Click="BtnPlayPause_Click" InputGestureText="Space" />
                            <MenuItem Header="停止" Click="BtnStop_Click" />
                            <MenuItem Header="続きから再生" Click="MenuResume_Click" />
                            <Separator />

                            <!-- チャプター -->
                            <MenuItem Header="チャプター">
                                <MenuItem Header="前のチャプター" Click="BtnPrevChapter_Click" />
                                <MenuItem Header="次のチャプター" Click="BtnNextChapter_Click" />
                            </MenuItem>
                            <Separator />

                            <!-- 英語学習機能 -->
                            <MenuItem Header="🔁 A-B リピート">
                                <MenuItem x:Name="MenuSetA" Header="A地点を設定" Click="MenuSetA_Click" InputGestureText="[" />
                                <MenuItem x:Name="MenuSetB" Header="B地点を設定" Click="MenuSetB_Click" InputGestureText="]" />
                                <MenuItem Header="リピート解除" Click="MenuClearAB_Click" InputGestureText="\" />
                            </MenuItem>

                            <MenuItem Header="⏩ 再生速度">
                                <MenuItem Header="0.5x (超スロー)" Click="MenuSpeed_Click" Tag="0.5" />
                                <MenuItem Header="0.75x (スロー)" Click="MenuSpeed_Click" Tag="0.75" />
                                <MenuItem Header="1.0x (通常)" Click="MenuSpeed_Click" Tag="1.0" />
                                <MenuItem Header="1.25x" Click="MenuSpeed_Click" Tag="1.25" />
                                <MenuItem Header="1.5x" Click="MenuSpeed_Click" Tag="1.5" />
                                <MenuItem Header="2.0x (倍速)" Click="MenuSpeed_Click" Tag="2.0" />
                            </MenuItem>
                            <Separator />

                            <!-- 字幕 -->
                            <MenuItem Header="字幕 (主 - 日本語)">
                                <MenuItem Header="字幕ファイルを読み込む..." Click="BtnLoadSubJp_Click" />
                                <MenuItem Header="字幕を非表示" Click="MenuHideJpSub_Click" />
                                <Separator />
                                <MenuItem Header="フォント大 (28pt)" Click="MenuJpFontSize_Click" Tag="28" />
                                <MenuItem Header="フォント中 (22pt)" Click="MenuJpFontSize_Click" Tag="22" />
                                <MenuItem Header="フォント小 (16pt)" Click="MenuJpFontSize_Click" Tag="16" />
                            </MenuItem>

                            <MenuItem Header="字幕 (副 - 英語)">
                                <MenuItem Header="字幕ファイルを読み込む..." Click="BtnLoadSubEn_Click" />
                                <MenuItem Header="字幕を非表示" Click="MenuHideEnSub_Click" />
                                <Separator />
                                <MenuItem Header="フォント大 (30pt)" Click="MenuEnFontSize_Click" Tag="30" />
                                <MenuItem Header="フォント中 (24pt)" Click="MenuEnFontSize_Click" Tag="24" />
                                <MenuItem Header="フォント小 (18pt)" Click="MenuEnFontSize_Click" Tag="18" />
                            </MenuItem>
                            <Separator />

                            <!-- その他 -->
                            <MenuItem Header="📸 スナップショット保存" Click="MenuSnapshot_Click" InputGestureText="S" />
                            <MenuItem Header="💿 DVDを開く..." Click="BtnOpenDvd_Click" />
                            <MenuItem Header="📄 メディアファイルを開く..." Click="MenuOpenFile_Click" />
                            <Separator />
                            <MenuItem Header="⛶ フルスクリーン" Click="BtnFullScreen_Click" InputGestureText="F" />
                        </ContextMenu>
                    </Grid.ContextMenu>
                </Grid>
            </vlc:VideoView>

            <!-- DVD未挿入時のメッセージ -->
            <StackPanel x:Name="WelcomePanel"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="Visible">
                <TextBlock Text="🎬"
                           FontSize="64"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16" />
                <TextBlock Text="DVD Player - Dual Subtitles"
                           FontFamily="{StaticResource UIFont}"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource PrimaryText}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8" />
                <TextBlock Text="DVDを挿入するか、右クリックメニューからメディアを開いてください"
                           FontFamily="{StaticResource JapaneseFont}"
                           FontSize="14"
                           Foreground="{StaticResource SecondaryText}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16" />
                <TextBlock FontFamily="{StaticResource UIFont}"
                           FontSize="11"
                           Foreground="{StaticResource SecondaryText}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           LineHeight="20">
                    <Run Text="ショートカット: Space=再生  ←→=10秒スキップ  []=A-Bリピート  S=スナップショット" />
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- ========== コントロールバー ========== -->
        <Border x:Name="ControlBar" Grid.Row="1"
                Background="{StaticResource ControlBarBackground}"
                Padding="12,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />  <!-- シークバー -->
                    <RowDefinition Height="Auto" />  <!-- コントロール -->
                </Grid.RowDefinitions>

                <!-- シークバー -->
                <Slider x:Name="SeekBar" Grid.Row="0"
                        Style="{StaticResource SeekBarStyle}"
                        Margin="0,0,0,4"
                        ValueChanged="SeekBar_ValueChanged"
                        PreviewMouseDown="SeekBar_PreviewMouseDown"
                        PreviewMouseUp="SeekBar_PreviewMouseUp" />

                <!-- コントロール行 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />   <!-- 再生コントロール -->
                        <ColumnDefinition Width="Auto" />   <!-- 時間表示 -->
                        <ColumnDefinition Width="*" />       <!-- スペーサー -->
                        <ColumnDefinition Width="Auto" />   <!-- 字幕・音量・フルスクリーン -->
                    </Grid.ColumnDefinitions>

                    <!-- 再生コントロール -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <Button x:Name="BtnPrevChapter" Style="{StaticResource MediaButton}"
                                Content="⏮" ToolTip="前のチャプター"
                                Click="BtnPrevChapter_Click" />
                        <Button x:Name="BtnPlayPause" Style="{StaticResource PlayButton}"
                                Content="▶" ToolTip="再生/一時停止"
                                Click="BtnPlayPause_Click" />
                        <Button x:Name="BtnNextChapter" Style="{StaticResource MediaButton}"
                                Content="⏭" ToolTip="次のチャプター"
                                Click="BtnNextChapter_Click" />
                        <Button x:Name="BtnStop" Style="{StaticResource MediaButton}"
                                Content="⏹" ToolTip="停止"
                                Click="BtnStop_Click" />
                        <!-- A-B リピートボタン -->
                        <Button x:Name="BtnABRepeat" Style="{StaticResource MediaButton}"
                                Content="🔁" ToolTip="A-Bリピート ([ ] キー)"
                                Click="BtnABRepeat_Click" />
                    </StackPanel>

                    <!-- 時間表示 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal"
                                VerticalAlignment="Center" Margin="12,0">
                        <TextBlock x:Name="TxtCurrentTime"
                                   Text="00:00:00"
                                   Foreground="{StaticResource SecondaryText}"
                                   FontFamily="{StaticResource UIFont}"
                                   FontSize="12"
                                   VerticalAlignment="Center" />
                        <TextBlock Text=" / "
                                   Foreground="{StaticResource SecondaryText}"
                                   FontSize="12"
                                   VerticalAlignment="Center" />
                        <TextBlock x:Name="TxtTotalTime"
                                   Text="00:00:00"
                                   Foreground="{StaticResource SecondaryText}"
                                   FontFamily="{StaticResource UIFont}"
                                   FontSize="12"
                                   VerticalAlignment="Center" />
                        <!-- 再生速度表示 -->
                        <TextBlock x:Name="TxtSpeedBar"
                                   Text=""
                                   Foreground="{StaticResource AccentText}"
                                   FontFamily="{StaticResource UIFont}"
                                   FontSize="11"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0" />
                    </StackPanel>

                    <!-- 右側コントロール -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <Button x:Name="BtnOpenDvd" Style="{StaticResource MediaButton}"
                                Content="💿" ToolTip="DVDを開く"
                                Click="BtnOpenDvd_Click" />
                        <Button x:Name="BtnLoadSubJp" Style="{StaticResource MediaButton}"
                                Content="🇯🇵" ToolTip="日本語字幕を読み込む"
                                Click="BtnLoadSubJp_Click" />
                        <Button x:Name="BtnLoadSubEn" Style="{StaticResource MediaButton}"
                                Content="🇺🇸" ToolTip="英語字幕を読み込む"
                                Click="BtnLoadSubEn_Click" />
                        <Button x:Name="BtnSnapshot" Style="{StaticResource MediaButton}"
                                Content="📸" ToolTip="スナップショット (S)"
                                Click="MenuSnapshot_Click" />
                        <Button x:Name="BtnVolume" Style="{StaticResource MediaButton}"
                                Content="🔊" ToolTip="ミュート切替"
                                Click="BtnVolume_Click" />
                        <Slider x:Name="VolumeBar"
                                Style="{StaticResource VolumeBarStyle}"
                                Value="80"
                                ValueChanged="VolumeBar_ValueChanged" />
                        <Button x:Name="BtnFullScreen" Style="{StaticResource MediaButton}"
                                Content="⛶" ToolTip="フルスクリーン"
                                Click="BtnFullScreen_Click" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
